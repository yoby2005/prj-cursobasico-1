<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ListView
        android:id="@+id/listLayout"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:stackFromBottom="true" />

    <TextView
        android:id="@+id/textLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="35dp"
        android:textColor="#0000ff"/>

    <LinearLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="/"
                    android:onClick="botonDiv"/>

                <Button
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="7"
                    android:onClick="numPresionado"/>

                <Button
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="8"
                    android:onClick="numPresionado"/>

                <Button
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="9"
                    android:onClick="numPresionado"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:orientation="horizontal">

                <Button
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="X"
                    android:onClick="botonMult"/>

                <Button
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="4"
                    android:onClick="numPresionado"/>

                <Button
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="5"
                    android:onClick="numPresionado"/>

                <Button
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="6"
                    android:onClick="numPresionado"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="-"
                    android:onClick="botonResta"/>

                <Button
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1"
                    android:onClick="numPresionado"/>

                <Button
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="2"
                    android:onClick="numPresionado"/>

                <Button
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="3"
                    android:onClick="numPresionado"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="+"
                    android:onClick="botonSuma"/>

                <Button
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="(  -  )"
                    android:onClick="botonSignoNeg"/>
                <Button
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:onClick="numPresionado"/>

                <Button
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="."
                    android:onClick="botonPunto"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="CLR"
                android:onClick="botonClear"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="CLR ALL"
                android:onClick="botonClearAll"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="Del"
                android:onClick="botonDel"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Enter"
                android:onClick="botonEnter"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
